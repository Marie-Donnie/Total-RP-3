	<!-- First call the script to create the Mixin -->
	<Script file="ColorPickerButton.lua"/>

	<Button name="TRP3_ColorPickerButton" virtual="true" mixin="TRP3_ColorPickerButtonMixin">
		<Size x="16" y="16"/>
		<HighlightTexture alphaMode="ADD" parentKey="Highlight" file="Interface\SpellActivationOverlay\IconAlert">
			<Size x="71" y="68"/>
			<Anchors>
				<Anchor x="-11" y="11" point="TOPLEFT"/>
			</Anchors>
			<TexCoords left="0" right="1" top="0.53" bottom="1"/>
			<Color r="1.0" g="1.0" b="1.0" a="0.40"/>
		</HighlightTexture>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Background">
					<Color r="1.0" g="1.0" b="1.0"/>
				</Texture>
			</Layer>
			<Layer level="BORDER">
				<Texture file="Interface\ACHIEVEMENTFRAME\UI-Achievement-IconFrame">
					<Size>
						<AbsDimension x="45" y="45"/>
					</Size>
					<Anchors>
						<Anchor x="-5" y="5" point="TOPLEFT"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture file="Interface\Cooldown\star4" parentKey="Blink" alpha="0.0" alphaMode="ADD">
					<Animations>
						<AnimationGroup parentKey="Animation" >
							<Alpha duration="0.4" toAlpha="1" fromAlpha="0" smoothing="IN"/>
							<Rotation degrees="-45" duration="0.4" smoothing="IN"/>
							<Alpha duration="0.4" toAlpha="0" fromAlpha="1" smoothing="OUT" startDelay="0.4"/>
							<Rotation degrees="-45" duration="0.4" smoothing="OUT" startDelay="0.4"/>
						</AnimationGroup>
					</Animations>
					<Size x="40" y="40"/>
					<Anchors>
						<Anchor x="0" y="0" point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnClick method="OnClick" />
			<OnEnter method="OnEnter" />
			<OnLeave method="OnLeave" />
		</Scripts>
	</Button>

</Ui>